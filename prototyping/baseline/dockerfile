FROM python:3.11

ENV PYTHONUNBUFFERED=1
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

WORKDIR /app

# Install Python packages
RUN pip install --no-cache-dir \
        pandas>=2.3.3 \
        numpy>=1.27.0 \
        statsmodels>=1.2.0 \
        scikit-learn>=1.3.0 \
        plotly>=5.20.0 \
        pyarrow>=12.0.1 \
        fastparquet>=2025.11.0

# Copy the script
COPY baseline.py .

ENTRYPOINT ["python", "baseline.py"]

